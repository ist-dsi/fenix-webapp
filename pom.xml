    <profiles>
        <profile>
            <id>production</id>
            <dependencies>
                <dependency>
                    <groupId>org.fenixedu</groupId>
                    <artifactId>a3es</artifactId>
                    <version>${version.org.fenixedu.a3es}</version>
                </dependency>
                <dependency>
                    <groupId>pt.ist</groupId>
                    <artifactId>a3es-ist</artifactId>
                    <version>${version.pt.ist.a3es-ist}</version>
                </dependency>
                <dependency>
                    <groupId>pt.ist</groupId>
                    <artifactId>digitalized-signatures</artifactId>
                    <version>${version.pt.ist.digitalized-signatures}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>SQLUpdateGenerator</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>pt.ist.fenix.webapp.SQLUpdateGeneratorMain</mainClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>fenixedu-maven-repository</id>
            <url>https://repo.fenixedu.org/fenixedu-maven-repository</url>
        </repository>
    </repositories>
</project>
