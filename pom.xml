    <parent>
        <groupId>org.fenixedu</groupId>
        <artifactId>web-app-project</artifactId>
        <version>2.4.0</version>
        <relativePath />
    </parent>

    <groupId>pt.ist</groupId>
    <artifactId>fenix-webapp</artifactId>
    <version>DEV-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Fenix Webapp</name>

    <properties>
        <version.ch.qos.logback.logback.classic>1.1.8</version.ch.qos.logback.logback.classic>
        <version.org.fenixedu.a3es>1.5.0</version.org.fenixedu.a3es>
        <version.org.fenixedu.academic.thesis>5.0.2</version.org.fenixedu.academic.thesis>
        <version.org.fenixedu.academic>10.0.0</version.org.fenixedu.academic>
        <version.org.fenixedu.ashes.theme>1.2.0</version.org.fenixedu.ashes.theme>
        <version.org.fenixedu.bennu.renderers>5.2.0</version.org.fenixedu.bennu.renderers>
        <version.org.fenixedu.bennu>5.1.0</version.org.fenixedu.bennu>
        <version.org.fenixedu.cms>3.1.2</version.org.fenixedu.cms>
        <version.org.fenixedu.commons>1.1.2</version.org.fenixedu.commons>
        <version.org.fenixedu.learning>3.1.5</version.org.fenixedu.learning>
        <version.org.fenixedu.messaging>3.6.0</version.org.fenixedu.messaging>
        <version.org.fenixedu.spaces>2.1.1</version.org.fenixedu.spaces>
        <version.pt.ist.a3es-ist>2.1.0</version.pt.ist.a3es-ist>
        <version.pt.ist.digitalized-signatures>3.0.4</version.pt.ist.digitalized-signatures>
        <version.pt.ist.fenixedu-ist-bpi>2.1.0</version.pt.ist.fenixedu-ist-bpi>
        <version.pt.ist.fenixedu-ist-sas-integration>1.0.2</version.pt.ist.fenixedu-ist-sas-integration>

        <version.pt.ist.fenixedu-ulisboa-cgdIntegration>2.1.1.IST</version.pt.ist.fenixedu-ulisboa-cgdIntegration>
        <version.pt.ist.fenixedu.idcards>3.0.0</version.pt.ist.fenixedu.idcards>
        <version.pt.ist.fenixedu.ist>12.2.4</version.pt.ist.fenixedu.ist>
        <version.pt.ist.fenixedu.onlinetests>5.0.1</version.pt.ist.fenixedu.onlinetests>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <path>/fenix</path>
                    <port>8080</port>
                    <warSourceDirectory>../fenixedu-academic/src/main/webapp</warSourceDirectory>
                    <uriEncoding>UTF-8</uriEncoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <fork>true</fork>
                    <maxmem>2048</maxmem>
                    <meminitial>1024</meminitial>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.fenixedu</groupId>
                <artifactId>bennu-maven-plugin</artifactId>
                <version>${version.org.fenixedu.bennu}</version>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.fenixedu</groupId>
            <artifactId>fenixedu-academic</artifactId>
            <version>${version.org.fenixedu.academic}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.sun.mail</groupId>
                    <artifactId>javax.mail</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.fenixedu</groupId>
            <artifactId>fenixedu-academic-thesis</artifactId>
            <version>${version.org.fenixedu.academic.thesis}</version>
        </dependency>
        <dependency>
